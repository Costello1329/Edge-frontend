{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false, /// disabled in order to load *.svg
    "noEmit": false,
    "jsx": "react",
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "typeRoots": [
      "../src/@types",
      "../node_modules/@types"
    ]
  },
  "include": ["../src"],
  "exclude": ["../node_modules"]
}
